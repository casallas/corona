import os

SConscript('cppunit-1.6.2/SConscript')

env = Environment(ENV = os.environ,
                  CPPPATH = ['#', Dir('cppunit-1.6.2')],
                  LIBPATH = ['#', Dir('cppunit-1.6.2')],
                  LIBS = ['cppunit', 'corona', 'png', 'jpeg'])
env.Program(target = 'CoronaTest', source = 'CoronaTest.cpp')
